---
const contactInfo = {
  name: "Anderson Woodworking Studio",
  address: "123 Woodwork Lane, Craftsville, ST 12345",
  phone: "(555) 123-4567",
  email: "john@andersoncraft.com",
  hours: {
    weekdays: "Monday - Friday: 8:00 AM - 6:00 PM",
    saturday: "Saturday: 9:00 AM - 3:00 PM",
    sunday: "Sunday: Closed"
  }
};
---
<section id="contact" class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-4">Get in Touch</h2>
    <p class="text-gray-600 text-center mb-16 max-w-2xl mx-auto">Let's discuss your project and bring your vision to life.</p>
    <div class="max-w-3xl mx-auto bg-gray-50 p-12 rounded-lg shadow-sm">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h3 class="text-2xl font-bold text-blue-900 mb-6">Contact Details</h3>
          <div class="space-y-6">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 mt-1 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <p class="text-gray-700 leading-relaxed">{contactInfo.address}</p>
            </div>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <p class="text-gray-700">{contactInfo.phone}</p>
            </div>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <p class="text-gray-700">{contactInfo.email}</p>
            </div>
          </div>
        </div>
        <div>
          <h3 class="text-2xl font-bold text-blue-900 mb-6">Studio Hours</h3>
          <div class="space-y-3">
            <p class="text-gray-700">{contactInfo.hours.weekdays}</p>
            <p class="text-gray-700">{contactInfo.hours.saturday}</p>
            <p class="text-gray-700">{contactInfo.hours.sunday}</p>
          </div>
          <div class="mt-8 p-4 bg-blue-50 rounded-lg">
            <h4 class="text-lg font-semibold text-blue-900 mb-2">Custom Appointments</h4>
            <p class="text-gray-700">Available for consultations outside regular hours by appointment</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>